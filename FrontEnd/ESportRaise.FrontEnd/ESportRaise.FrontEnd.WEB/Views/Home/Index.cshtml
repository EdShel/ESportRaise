
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedView> SharedLocalizer

@{
    ViewData["Title"] = "Home Page";
}


<div class="gamepad-logo">
    <div class="back">
        <div class="back-triangle"></div>
        <div class="back-rect"></div>
        <img src="~/images/gamepad.png" />
    </div>
    <div class="logo-text">ESport Raise</div>
</div>


<h1>"@Localizer["Register"]"</h1>
<h1>In your language dog is @SharedLocalizer["Dog"]</h1>

<form asp-action="SetLanguage" asp-controller="Home">
    <input name="culture" value="uk" />
    <input type="submit" class="btn btn-primary" />
</form>

<div class="container body-content">
    <div id="f">

        <button v-on:click="info">
            get user info
        </button>

        <div v-for="n in 100">
            Hello {{ n }}
        </div>
    </div>
</div>

<script>
    new Vue({
        el: '#f',
        methods: {
            info() {
                sendGet('auth/me').then(r => console.log(r)).catch(e => console.log(e));
            }
        }
    })

    window.addEventListener("scroll", function () {
        let logo = document.querySelector(".gamepad-logo img");

        let scrollValue = window.scrollY;
        let viewHeight = document.documentElement.clientHeight;
        let elementTop = 0;
        let elementHeight = logo.offsetHeight;

        let elementPercentScrolled = Math.min(1, scrollValue / viewHeight);

        logo.style = "top: " + elementPercentScrolled * elementHeight+ "px";
    });
</script>
